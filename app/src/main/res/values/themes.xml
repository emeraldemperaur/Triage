<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Triage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chiron_blue</item>
        <item name="colorPrimaryVariant">@color/chiron_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Triage.FullScreen" parent="Theme.Triage">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BufferDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="SideMenuTheme">
        <item name="color">@color/chiron_blue</item>
        <item name="colorAccent">@color/chiron_blue</item>
        <item name="android:textColor">@color/chiron_blue</item>
        <item name="android:fontFamily">@font/montserratlight</item>
        <item name="android:textSize">16sp</item>
        <item name="lineSpacing">0.20dp</item>
        <item name="android:textColorSecondary">@color/chiron_blue</item>

    </style>

</resources>