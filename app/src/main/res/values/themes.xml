<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Triage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chiron_blue</item>
        <item name="colorPrimaryVariant">@color/chiron_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/Widget.Triage.Snackbar</item>
    </style>


    <style name="Widget.Triage.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginBottom">96dp</item>

    </style>

    <style name="Theme.Triage.FullScreen" parent="Theme.Triage">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BufferDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="SideMenuTheme">
        <item name="color">@color/chiron_blue</item>
        <item name="colorAccent">@color/chiron_blue</item>
        <item name="android:textColor">@color/chiron_blue</item>
        <item name="android:fontFamily">@font/montserratlight</item>
        <item name="android:textSize">16sp</item>
        <item name="lineSpacing">0.20dp</item>
        <item name="android:textColorSecondary">@color/chiron_blue</item>

    </style>


    <style name="FootMenuTheme">
        <item name="android:fontFamily">@font/montserratlight</item>
        <item name="lineSpacing">0.20dp</item>
    </style>

    <style name="TimeStreamPickerTheme">
        <item name="android:textColor">@color/chiron_grey</item>
        <item name="colorAccent">@color/chiron_blue</item>
        <item name="android:fontFamily">@font/montserratlight</item>
        <item name="lineSpacing">0.06dp</item>
    </style>

    <style name="InfoButtonTheme">
        <item name="android:fontFamily">@font/montserratlight</item>
        <item name="lineSpacing">0.20dp</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="MeInfoButtonsTheme">
        <item name="colorPrimary">@color/black</item>

    </style>

    <style name="MeInfoTheme" parent="Theme.Triage">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="PivotProgress">
        <item name="colorSecondary">@color/chiron_blue</item>
    </style>



    <style name="selectedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/chiron_blue</item>
        <item name="cardBackgroundColor">@color/chiron_blue</item>
    </style>

</resources>