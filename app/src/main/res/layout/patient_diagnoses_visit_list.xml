<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/diagnosis_visit_list_view"
        android:background="@drawable/silver"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:visibility="invisible"
                android:elevation="33dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="@color/chiron_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/diagnosis_visit_logname_text"
                    android:text="@string/day_month_year"
                    android:textSize="26sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:letterSpacing="0.09"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratmedium"
                    android:layout_width="313dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toBottomOf="@id/diagnosis_visit_logname_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/diagnosis_visit_host_title"
                    android:textColor="@color/chiron_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.21"
                    android:text="@string/host_practitioner"
                    android:fontFamily="@font/montserratlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:text="@string/dr_thelonious_jaha"
                    android:fontFamily="@font/montserratlight"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="normal"
                    android:letterSpacing="0.03"
                    android:layout_marginStart="6dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/diagnosis_visit_host_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/diagnosis_visit_host_text"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toBottomOf="@id/diagnosis_visit_host_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/diagnosis_visit_host_id"
                    android:textColor="@color/chiron_grey"
                    android:textSize="21sp"
                    android:textStyle="normal"
                    android:textAllCaps="true"
                    android:letterSpacing="0.21"
                    android:text="@string/tj100ark"
                    android:fontFamily="@font/montserratlight"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toBottomOf="@id/diagnosis_visit_host_id"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/diagnosis_visit_log_description"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:maxLines="13"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:letterSpacing="0.06"
                    android:layout_marginBottom="12dp"
                    android:text="@string/triage_info_text"
                    android:fontFamily="@font/montserratthin"
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:contentDescription="@string/visit_time"
                    android:src="@drawable/time_watch_icon"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="86dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:tint="@color/chiron_blue" />


                <TextView
                    android:text="@string/_12_00"
                    android:fontFamily="@font/montserratbold"
                    android:textColor="@color/chiron_blue"
                    android:textSize="26sp"
                    android:textStyle="normal"
                    android:letterSpacing="0.03"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:maxLength="23"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    app:layout_constraintTop_toBottomOf="@id/diagnosis_visit_host_id"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/diagnosis_visit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:elevation="33dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="0dp"
                android:background="@color/chiron_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>