<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/pharmaceutical_list_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/pharmaceutical_card_view"
        android:elevation="33dp"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="213dp"
        android:layout_margin="5dp"
        android:padding="33dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/info_card"
                android:id="@+id/pharmaceutical__iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="44dp"
                android:scaleType="fitXY"
                tools:src="@drawable/meka_yingyanglogo_chironblue"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="179dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pharmaceutical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/pharmaceutical_name"
                    android:maxLines="2"
                    android:textColor="@color/chiron_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/manufacturer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="@string/manufacturer"
                    android:textColor="@color/chiron_blue"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/manufacturer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratlight"
                    android:text="@string/manufacturer_name"
                    android:textColor="@color/chiron_blue"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/manufacturer_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="@string/manufacture_date"
                    android:textColor="@color/chiron_blue"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/manufacture_date"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/manufacture_date"
                    android:textColor="@color/chiron_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expiry_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:text="@string/expiry_date"
                    android:textColor="@color/chiron_blue"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratbold"
                    android:text="@string/expiry_date"
                    android:textColor="@color/chiron_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>