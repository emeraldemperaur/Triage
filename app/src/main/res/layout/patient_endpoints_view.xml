<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/patient_endpoints_layout"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardElevation="33dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="565dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="end"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="33dp"
                android:letterSpacing="0.33"
                android:textStyle="bold"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/chiron_blue"
                android:textSize="19sp"
                android:textAllCaps="true"
                android:text="@string/patient_endpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/first_name_patient_endpoint"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_visit_host_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/firstname_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_visit_host_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/last_name_patient_endpoint"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_prescriber_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/lastname_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_prescriber_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.22"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/last_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/birth_date_patient_endpoint"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_prescriber_id_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/birthdate_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_prescriber_id_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.10"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/birth_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/blood_group_patient_endpoint"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_insurer_id_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/bloodtypes_icon"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_insurer_id_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.06"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/blood__group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/insurer_patient_endpoint"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_date_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/ic_insurance_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:lines="1"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_date_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/insurer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/insurer_id_patient_endpoint"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_insurer_id_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/insuranceid_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_insurer_id_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.02"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/insurer_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>