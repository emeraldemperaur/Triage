<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/record_detail_view"
    tools:context=".view.RecordViewFragment">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <include
            android:visibility="invisible"
            android:id="@+id/patient_records_view_include"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="23dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            layout="@layout/patient_record_view"/>

            <include
                android:visibility="invisible"
                android:id="@+id/diagnosis_records_view_include"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="23dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/diagnosis_record_view"/>

            <include
                android:visibility="invisible"
                android:id="@+id/prescription_records_view_include"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="23dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/prescription_record_view"/>

            <include
                android:visibility="invisible"
                android:id="@+id/visit_records_view_include"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="23dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/visit_record_view"/>

            <include
                android:visibility="invisible"
                android:id="@+id/practitioner_records_view_include"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="23dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/practitioner_record_view"/>

            <include
                android:visibility="invisible"
                android:id="@+id/pharmaceutical_records_view_include"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="23dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/pharmaceutical_record_view"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/exit_record_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:layout_marginEnd="@dimen/fab"
        android:contentDescription="@string/chironquickaction"
        app:srcCompat="@drawable/list_view_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>