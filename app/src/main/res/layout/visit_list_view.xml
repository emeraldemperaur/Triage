<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/visit_list_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/visit_card_view"
        android:elevation="33dp"
        android:layout_width="match_parent"
        android:background="?android:selectableItemBackground"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:padding="33dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/visit_diagnosis"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratbold"
                    tools:text="@string/diagnosis"
                    android:textColor="@color/chiron_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/host_practitioner_label"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratlight"
                    android:text="@string/host_practitioner"
                    android:textColor="@color/chiron_blue"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/visit_examination_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratregular"
                    tools:text="@string/host_practitioner"
                    android:textColor="@color/chiron_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/host_practitioner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/montserratbold"
                    tools:text="@string/examination_date"
                    android:textColor="@color/chiron_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:elevation="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/visit_time"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratbold"
                    tools:text="10:00"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/chiron_blue"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/diagnosis_level_label"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratlight"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="@string/infectious"
                    android:textColor="@color/chiron_blue"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="normal" />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>