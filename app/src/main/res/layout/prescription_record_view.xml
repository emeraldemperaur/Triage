<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/silver"
    android:id="@+id/prescription_detail_view"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/prescription_info_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="-365dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/prescription_detail_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/chiron_blue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/prescription_detail_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="69dp"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.21"
                    android:text="@string/rx_name"
                    android:textAllCaps="true"
                    android:textColor="@color/chiron_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/prescription_detail_name_text"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.06"
                    android:maxLines="2"
                    android:text="@string/zombie_virus_cure"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prescription_detail_name_title" />


                <TextView
                    android:id="@+id/prescription_detail_prescriber_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.21"
                    android:text="@string/prescriber"
                    android:textAllCaps="true"
                    android:textColor="@color/chiron_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prescription_detail_name_text" />

                <TextView
                    android:id="@+id/prescription_detail_prescriber_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.06"
                    android:text="@string/dr_thelonious_jaha"
                    android:textAllCaps="false"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prescription_detail_prescriber_title" />

                <TextView
                    android:id="@+id/prescription_detail_prescriber_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserratthin"
                    android:letterSpacing="0.06"
                    android:text="@string/insurer_id"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:maxLength="20"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prescription_detail_prescriber_text" />


                <TextView
                    android:id="@+id/prescription_detail_patient_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.21"
                    android:text="@string/patient"
                    android:textAllCaps="true"
                    android:textColor="@color/chiron_grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prescription_detail_prescriber_text" />


                <TextView
                    android:id="@+id/prescription_detail_patient_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.06"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/dr_thelonious_jaha"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/prescription_detail_patient_title" />


                <TextView
                    android:id="@+id/prescription_detail_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="69dp"
                    android:layout_marginEnd="13dp"
                    android:ellipsize="start"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.19"
                    android:maxLength="33"
                    android:singleLine="true"
                    android:text="@string/day_month_year"
                    android:textColor="@color/chiron_grey"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




            </androidx.constraintlayout.widget.ConstraintLayout>



            <LinearLayout
                android:visibility="visible"
                android:id="@+id/prescription_detail_info_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/silver"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prescription_detail_window">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/chiron_grey"
                    android:elevation="13dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/prescription_detail_dosage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/montserratlight"
                    android:letterSpacing="0.21"
                    android:text="@string/dosage"
                    android:textAllCaps="true"
                    android:textColor="@color/chiron_blue"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/prescription_detail_sub_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserratbold"
                    android:letterSpacing="0.21"
                    android:text="@string/instruction"
                    android:textAllCaps="true"
                    android:textColor="@color/chiron_blue"
                    android:textSize="13sp"
                    android:textStyle="bold" />



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/prescription_detail_dosage_type"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="69dp"
                        android:layout_marginBottom="69dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/pills_bottle_icon"
                        android:layout_width="69dp"
                        android:layout_height="69dp"
                        app:tint="@color/chiron_blue" />


                    <TextView
                        android:id="@+id/prescription_detail_dosage_amount"
                        android:textSize="18sp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="44dp"
                        android:textColor="@color/chiron_blue"
                        android:fontFamily="@font/montserratmedium"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/prescription_detail_dosage_type"
                        android:text="@string/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/prescription_detail_dosage_amount_text"
                        android:textSize="33sp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/chiron_blue"
                        android:fontFamily="@font/montserratbold"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toBottomOf="@id/prescription_detail_dosage_amount"
                        app:layout_constraintLeft_toRightOf="@id/prescription_detail_dosage_type"
                        android:text="@string/_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/prescription_detail_regimen"
                        android:textSize="18sp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="44dp"
                        android:textColor="@color/chiron_blue"
                        android:fontFamily="@font/montserratmedium"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/prescription_detail_dosage_amount"
                        android:text="@string/regimen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/prescription_detail_regimen_text"
                        android:textSize="22sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/chiron_blue"
                        android:fontFamily="@font/montserratregular"
                        android:textStyle="normal"
                        android:letterSpacing="0.03"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toBottomOf="@id/prescription_detail_dosage_amount"
                        app:layout_constraintLeft_toRightOf="@id/prescription_detail_dosage_amount_text"
                        android:text="@string/every_3_hours"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/prescription_detail_duration"
                        android:textSize="18sp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="126dp"
                        android:textColor="@color/chiron_blue"
                        android:fontFamily="@font/montserratmedium"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/prescription_detail_dosage_type"
                        android:text="@string/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/prescription_detail_duration_text"
                        android:textSize="22sp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/chiron_blue"
                        android:fontFamily="@font/montserratregular"
                        android:textStyle="normal"
                        android:letterSpacing="0.03"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toBottomOf="@id/prescription_detail_duration"
                        app:layout_constraintLeft_toRightOf="@id/prescription_detail_dosage_type"
                        android:text="@string/_90_days"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/prescription_detail_batch_number"
                        android:text="@string/batch_number"
                        android:layout_marginTop="111dp"
                        android:layout_marginBottom="119dp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserratthin"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/prescription_detail_duration_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>







        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>