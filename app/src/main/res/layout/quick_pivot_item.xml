<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    app:cardCornerRadius="13dp"
    android:layout_gravity="center"
    app:cardElevation="33dp"
    app:cardUseCompatPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/quick_pivot_card"
    android:focusable="true">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/quick_pivot_card_view"
    android:layout_width="183dp"
    android:layout_height="213dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/quick_pivot_icon"
        app:cardElevation="23dp"
        app:cardCornerRadius="36dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/quick_pivot_icon_img"
        android:scaleType="fitXY"
        android:layout_margin="13dp"
        android:src="@drawable/ic_prescriptions_icon"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:contentDescription="@string/pivots"
        app:tint="@color/chiron_blue" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:textAlignment="center"
        android:id="@+id/quick_pivot_title"
        android:lines="2"
        android:maxLines="2"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/chiron_blue"
        android:textSize="14sp"
        android:letterSpacing="0.20"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="23dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_add_blue_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/chironquickaction" />


</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>



