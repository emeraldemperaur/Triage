<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:background="?android:selectableItemBackground"
    android:orientation="vertical"
    android:padding="13dp"
    app:cardCornerRadius="13dp"
    android:layout_gravity="center"
    app:cardElevation="33dp"
    app:cardUseCompatPadding="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/quick_pivot_card">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/quick_pivot_card_view"
    android:layout_width="269dp"
    android:layout_height="269dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/quick_pivot_icon"
        app:cardElevation="23dp"
        app:cardCornerRadius="36dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="13dp"
        android:src="@drawable/ic_baseline_prescription_24"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:contentDescription="@string/pivots" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/quick_pivot_title"
        android:lines="2"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/chiron_blue"
        android:textSize="21sp"
        android:letterSpacing="0.20"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="23dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_add_blue_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/chironquickaction" />


</androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>



    </FrameLayout>