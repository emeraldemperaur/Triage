<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pharmaceutical_endpoints_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardElevation="33dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="565dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="end"
                android:lines="1"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="33dp"
                android:letterSpacing="0.06"
                android:textStyle="bold"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/chiron_blue"
                android:textSize="19sp"
                android:text="@string/pharmaceutical_endpoints"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/patient_endpoint_row_1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pharmaceutical_brand_name_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_visit_host_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_patients"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/brand_icon"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_visit_host_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pharmaceutical_generic_name_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_prescriber_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_diagnosis"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/generic_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_prescriber_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/generic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/entity_row_2"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pharmaceutical_chemical_name_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_prescriber_id_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_prescription"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/chemical_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_prescriber_id_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/chemical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pharmaceutical_manufacturer_name_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_insurer_id_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_visit"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/rx_manufacturer_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_insurer_id_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.03"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/manufacturer_lc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/entity_row_3"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pharmaceutical_make_date_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_date_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_pharmaceuticals"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/visit_time_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:lines="1"
                            android:letterSpacing="0.12"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_date_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/make_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pharmaceutical_expiry_date_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_insurer_id_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_practitioner"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/expiry_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_insurer_id_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/expire_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>