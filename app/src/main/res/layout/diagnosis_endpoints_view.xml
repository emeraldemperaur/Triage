<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/diagnosis_endpoints_layout"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardElevation="33dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="369dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="33dp"
                android:fontFamily="@font/montserratsemibold"
                android:letterSpacing="0.22"
                android:text="@string/diagnosis_endpoints"
                android:textColor="@color/chiron_blue"
                android:textSize="19sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/diagnosis_endpoint_row_1"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/synopsis_diagnosis_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_synopsis_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_patients"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/ic_infoicon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_synopsis_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.12"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/synopsis_lc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/visit_date_diagnosis_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_diagnosis_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_diagnosis"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/visit_time_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_diagnosis_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.22"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/visit_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/entity_row_2"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/insurer_id_diagnosis_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_prescription_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_prescription"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/insuranceid_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_prescription_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.10"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/insurer_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/level_diagnosis_endpoint"
                    android:background="?android:selectableItemBackground"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:checkable="true"
                    app:checkedIcon="@drawable/ic_baseline_add_check_24"
                    app:checkedIconTint="@color/chiron_blue"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardElevation="13dp"
                    android:layout_width="150dp"
                    android:layout_height="111dp"
                    android:focusable="true">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/quick_pivot_icon_visit_view"
                            android:layout_marginTop="13dp"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="23dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="44dp"
                            android:layout_height="44dp">

                            <ImageView
                                android:id="@+id/quick_pivot_icon_visit"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@drawable/level_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:tint="@color/chiron_blue" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@id/quick_pivot_icon_visit_view"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="18sp"
                            android:fontFamily="@font/montserratlight"
                            android:textStyle="bold"
                            android:letterSpacing="0.06"
                            android:textColor="@color/chiron_blue"
                            android:text="@string/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>